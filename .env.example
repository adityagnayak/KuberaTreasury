# NexusTreasury — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# ── Database ────────────────────────────────────────────────────────────────
# Local dev (SQLite)
DATABASE_URL=sqlite:///./nexustreasury.db

# Production (PostgreSQL / Supabase)
# DATABASE_URL=postgresql://user:password@host:5432/nexustreasury

# ── Cache ───────────────────────────────────────────────────────────────────
# Local Redis
REDIS_URL=redis://localhost:6379/0

# Upstash (production)
# REDIS_URL=rediss://default:token@host.upstash.io:6379

# ── Security ────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
AES_KEY=your-32-byte-base64-encoded-key-here

# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-random-256-bit-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# ── Treasury Settings ────────────────────────────────────────────────────────
BASE_CURRENCY=EUR
SANCTIONS_MATCH_THRESHOLD=0.85
VARIANCE_ALERT_THRESHOLD=500.0

# ── Application ─────────────────────────────────────────────────────────────
ENVIRONMENT=development

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]
